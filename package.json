{
  "name": "arikushi",
  "version": "0.0.0-semantically-released",
  "description": "Generate Japanese word mapping from Latin characters",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "mocha src/index.test.js -w",
    "test:single": "istanbul cover -x *.test.js _mocha -- -R spec src/index.test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serkansokmen/arikushi.git"
  },
  "keywords": [
    "generate",
    "latin",
    "japanese",
    "string",
    "mapping"
  ],
  "author": "Serkan Sokmen <e.serkan.sokmen@gmail.com> (http://serkansokmen.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/serkansokmen/arikushi/issues"
  },
  "homepage": "https://github.com/serkansokmen/arikushi#readme",
  "dependencies": {
    "knuth-shuffle": "1.0.1"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "chai-string": "1.1.6",
    "codecov.io": "0.1.6",
    "commitizen": "2.5.0",
    "cz-conventional-changelog": "1.1.5",
    "ghooks": "1.0.3",
    "istanbul": "0.4.2",
    "mocha": "2.4.4",
    "semantic-release": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test:single && npm run check-coverage"
    }
  }
}
